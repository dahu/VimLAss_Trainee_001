#!/bin/sh
# vim-rtp-locate - find some/file.vim in the &runtimepath
# Barry Arthur, 2013-03-17

if [ -z "$1" ]; then
  exe=`basename $0`
  echo -n "usage: $exe some/file.vim\n\n"
  echo "Prints the first occurrence of some/file.vim in &runtimepath"
  echo "Depends on your ~/.vimrc"
  exit 1
fi

echo "echo findfile('$1', &rtp)" | vim -u ~/.vimrc -c 'set verbose=1' -e -s 2>&1 | sed -n '/^:echo/,/^:/{/^:/d;s/\r//;p}'
